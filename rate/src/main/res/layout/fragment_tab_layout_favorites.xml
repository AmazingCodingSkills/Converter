<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rate.presentation.favourite.onlyfavourite.OnlyFavoritesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabFavourites"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selectCurrencyRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            tools:itemCount="3"
            tools:listitem="@layout/list_item_favorite" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hintEmptyScreen"
            style="@style/TextAppearance.MyApp.Headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_empty_screen"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>